# Groq API Configuration (free tier with rate limits)
GROQ_API_KEY=your_groq_api_key_here

# Anthropic API Configuration (premium - money mode)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Money Mode: Use Anthropic Claude (no rate limits, premium quality)
# Set to 'true' for unlimited generation with Claude models
MONEY_MODE=false

# Model Configuration (primary and fallback for rate limit handling)
MODEL_NAME=openai/gpt-oss-120b
FALLBACK_MODEL=llama-3.3-70b-versatile
CLAUDE_MODEL=claude-haiku-4-5-20251001

# Pexels API for Image Search
PEXELS_API_KEY=your_pexels_api_key_here

# Rate Limiting (helps avoid API rate limits with parallel agents)
# With 19 agents running in parallel, delays prevent hitting TPM limits
ENABLE_RATE_LIMITING=true
REQUEST_DELAY_MIN=1.0
REQUEST_DELAY_MAX=3.0

# Execution Mode: parallel (fast) or sequential (more reliable)
# Sequential mode runs agents one-at-a-time to avoid rate limits  
SEQUENTIAL_MODE=false
